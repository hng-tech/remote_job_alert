      <div id="content ">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-center mb-4 dashboard">
          <h1 class="h3 mb-0 text-blue-700">Manage Applicants</h1>
        </div>

        <div class="container-fluid">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <p class="mb-4 text-gray-800">This is the manageapplicants page for DevAlert</p>
          </div>
          <div class="card shadow mb-4">
            <div class="card-header py-3 bg-blue">
              <h6 class="m-0 font-weight-bold text-white">Applicant List</h6>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead class="bg-primary t-14 text-white">
                  <tr>
                    <th>S/N</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Experience</th>
                    <th>Action</th>
                    <th></th>

                  </tr>
                </thead>
                <tbody class="t-13 xc_table">
                  {{# each content}}
                  <tr>
                    <td>{{inc @index}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.experience}}</td>

                    <td>
                      <button class="btn br-0 btn-dark btn-sm t-11" data-toggle="modal" data-target="#b{{this.id}}">
                        <i class="fa fa-eye"></i> View</button>
                    </td>
                    <td>
                      <a href="/applicant/{{this.id}}/delete" class="btn br-0 btn-danger btn-sm t-11">
                        <i class="fa fa-trash"></i> Delete</a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
