	<script>

	let url = '/jobs_json';
	

	fetch(url)
	.then((resp) => resp.json())
	.then(function(jobData){
		for(let i=0;i<8;i++){
		let min_pay = jobData[i].job_pay_min;
		let max_pay = jobData[i].job_pay_max;

		let currency_url = "http://www.geoplugin.net/json.gp";

		fetch(currency_url)
		.then(resp=>resp.json())
		.then(function (curr){
		let exchange_rate = curr.geoplugin_currencyConverter;
		let currency_code = curr.geoplugin_currencySymbol;
		let min_pay_convert = Math.ceil(min_pay*exchange_rate);
		let max_pay_convert = Math.ceil(max_pay*exchange_rate);

		let job_cards =	"<div class='card featureCad col-md-4 offset-md-4 left' style='padding-bottom: 20px' id='job_card'><div class='container'><a href='/jobs/featured/" +jobData[i].slug+ "'><img src='"+jobData[i].image_link+"' alt='google-image'><h4 class='card-head' id='job_title'><b>"+jobData[i].job_title+"</b></h4> <p class='job-brief truncate' id='job_desc'>"+jobData[i].job_description+"<br><b>Stack:</b> JavaScript || React || HTML.</p> <p><ion-icon name='briefcase' id='company_name'></ion-icon>"+jobData[i].company_name+"<ion-icon name='time'></ion-icon><span id='job_type'>"+jobData[i].job_type+"</span></p><span class='pay1' id='min_pay'>"+currency_code+min_pay_convert+"</span> -- <span class='pay2' id='max_pay'>"+currency_code+max_pay_convert+"</span><p class='hide'></p></a></div></div>";


			$("#jobs").append(job_cards);
		
	})

		
			
