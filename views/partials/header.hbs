						<label for="" class="my-0">Email</label>
						<input type="text" name="email" class="form-control my-0" placeholder="johndoe@example.com" required>
					</div>
					<div class="form-group">
						<label for="" class="my-0">Phone number</label>
						<input type="tel" name="phoneNo" class="form-control my-0" placeholder="0903455123442" required>
					</div>
					<input value="Pay" type="submit" name="phone" class="btn btn-custom px-5 mt-4"></input>
