<div id="single-job">
    <div class="container">
        {{!-- Bread crumb --}}
        <div class="row">
            <div class="col-12">
                <div class=" my-4 shadow-sm">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-whyt br-0">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/jobs">All Jobs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{content.title}}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <h1 class="title-header mt-2 mb-2 p-1 pl-2">{{content.title}}</h1>
        <div class="single-job-top">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 job-head">
                    <div class="job-img-container">
                        <img class="img-fluid" src="{{content.company_logo}}" alt="{{content.title}}" />
                    </div>
                    <div class="job-quick-details mt-4">
                        <p>{{content.type}}&nbsp;-&nbsp;{{content.title}}</p>
                        <p>At {{content.company}}</p>
                        <p style="color: black;">Our experienced and connected agents will apply on your behalf to boost
                            your chances.</p>
                        <a class="btn mt-4" href="#hire-form">Apply Now</a>
                    </div>
                </div>
                <div class="d-md-none col-lg-1"></div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 job-summary">
                    <p class="text-xs-center p-1" style="display: inline; background: #11144C; color: white;">Work from
                        anywhere</p><br /><br />
                    <i class="m-1">Apply through us and get your dream remote job today!</i>
                    <br /><br />
                    <h3>REMOTE JOB SUMMARY</h3>
                    <p style="text-transform: capitalize;">Key Technologies: {{{keytech}}}</p>
                    <p>
                        {{{summary}}}
                        <p>Location: {{content.location}}</p>
                        <p style="font-size: 14px;">Since: <span>{{content.created_at}}</span></p>
                    </p>
                </div>
            </div>
        </div>
        <hr>
        <div class="single-job-body text-sm">
            <h3>FULL DESCRIPTION</h3>
            {{{content.description}}}
            <h3>Want to Apply directly?</h3>
            <div class="row shorten-link">
                <p>{{{content.how_to_apply}}}</p>
            </div>
        </div>
        <br />
        <div class="single-job-bottom">
            <div class="row">
                <div class="col-md-12 col-lg-6 more-jobs-section">
                    <div class="more-jobs">
                        <h4 class="text-center" >SIMILAR REMOTE JOBS YOU MAY LIKE</h4>
                        {{# each similar_jobs}}
                        <div class="more-job">
                            <div class="more-job-image">
                                <img class="img-fluid" alt="{{this.title}}" src="{{this.company_logo}}">
                            </div>
                            <div class="more-job-body">
                                <h4 title="{{this.title}}">{{this.title}}</h4>
                                <p>{{this.type}}</p>
                                <p>Company: {{this.company}}</p>
                            </div>
                            <div class="more-job-link">
                                <a href="/jobs/{{this.custom_url}}" class="btn btn-sm">Apply</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="hidden-md col-lg-1"></div>
                <div id="hire-form" class="col-md-12 col-lg-5 hire-agent">
                    <div class="form-box">
                        <h4>HIRE AN AGENT TODAY</h4>
                        <p class="text-center">Pay an agent to Apply on your behalf.<br />Increase your chances by 70%.
                        </p>
                        <form method="POST" action="/pay">
                            <div class="input-group input-group-lg mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@</span>
                                </div>
                                <input type="text" name="email" class="form-control" placeholder="email@dev.com"
                                    aria-label="Email" aria-describedby="basic-addon1" required="required">
                            </div>
                            <div class="input-group input-group-lg mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><span
                                            class="fa fa-phone"></span></span>
                                </div>
                                <input type="text" name="phoneNo" class="form-control" placeholder="234" minlength="11"
                                    pattern="[+]{0,1}[0-9\s]+" maxlength="16" required="required"
                                    aria-label="phonenumber" aria-describedby="basic-addon1">
                            </div>
                            <div class="pay-buttons">
                                <input value="Pay with Paystack" type="submit" name="phone"
                                    class="btn btn-custom px-2 mt-4" />
                                <button id="buttonCheckout" class="btn btn-custom px-2 mt-4">Pay with Stripe</button>
                            </div>
                        </form>
                        <br>
                        <p>Once payment is successful, An agent will get in touch with you within 30 minutes and begin
                            your application process.</p>
                    </div>

                </div>
            </div>
        </div>
        <br>
        <a style="background: #11144C; color: white;" class="btn btn-sm btn-secondary p-2" href="/jobs">Back to job
            listings</a>
        <br>
    </div>
</div>
<div class="container_fluid pt-4 pb-4 mb-4" style="background: rgba(17, 20, 76, .9);">
    <div class="subscribe-form col-sm-12 col-md-12 text-center intro-text mr-auto ml-auto mt-2 mb-4">
        <h3 class="subscribe-text text-md-center text-lg-left">Get on board. Subscribe to receive alerts on similar
            remote jobs like this for
            free.</h3>
        <form action="/email-subscription" method="POST">
            <div class="input-group">
                <input type="email" class="form-control" placeholder="Email" name="email" required="required">
                <div class="input-group-append ml-2">
                    <button class="btn subscribe" style="color: white; background-color:#11144C"
                        type="submit">Subscribe</button>
                </div>
            </div>
        </form>
    </div>
</div>
