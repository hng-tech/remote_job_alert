<div id="single-job">
    <div class="container">
        <div class="single-job-top">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 job-head">
                    <div class="job-img-container">
                        <img class="img-fluid" src="{{content.company_logo}}" alt="{{content.company_logo}}" />
                    </div>
                    <div class="job-quick-details mt-4">
                        <p>{{content.type}}&nbsp;{{content.title}}</p>
                        <p>At {{content.company}}</p>
                        <p>Location: {{content.location}}</p>
                        <p style="font-size: 10px;">Since: <span>{{content.created_at}}</span></p>
                        <a class="btn mt-4" href="#hire-form">Apply Now</a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9 job-summary">
                    <h3>JOB SUMMARY</h3>
                    <p>
                        {{{summary}}}
                </div>
            </div>
        </div>
        <hr>
        <div class="single-job-body">
            <h3>FULL DESCRIPTION</h3>
            {{{content.description}}}
            <h3>Want to Apply directly?</h3>
            {{{content.how_to_apply}}}
        </div>
        <div class="single-job-bottom">
            <div class="row">
                <div class="col-md-12 col-lg-6 more-jobs-section">
                    <div class="more-jobs">
                        <h4>SIMILAR JOBS YOU MAY LIKE</h4>
                        {{# each similar_jobs}}
                        <div class="more-job">
                            <div class="more-job-image">
                                <img class="img-fluid" src="{{this.company_logo}}">
                            </div>
                            <div class="more-job-body">
                                <h4>{{this.title}}</h4>
                                <p>{{this.type}}</p>
                                <p>Company: {{this.company}}</p>
                            </div>
                            <div class="more-job-link">
                                <a href="/jobs/{{this.id}}" class="btn btn-sm">Read
                                    More</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div id="hire-form" class="col-md-12 col-lg-6 hire-agent">
                    <div class="form-box">
                        <h4>HIRE AN AGENT NOW</h4>
                        <form method="POST" action="/pay">
                            <div class="input-group input-group-lg mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@</span>
                                </div>
                                <input type="text" name="email" class="form-control" placeholder="email@dev.com"
                                    aria-label="Email" aria-describedby="basic-addon1" required="required">
                            </div>
                            <div class="input-group input-group-lg mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><span
                                            class="fa fa-phone"></span></span>
                                </div>
                                <input type="text" name="phoneNo" class="form-control" placeholder="234" minlength="11"
                                    pattern="[+]{0,1}[0-9\s]+" maxlength="16" required="required"
                                    aria-label="phonenumber" aria-describedby="basic-addon1">
                            </div>
                            <div class="pay-buttons">
                                <input value="Pay with Paystack" type="submit" name="phone"
                                    class="btn btn-custom px-2 mt-4" />
                                <button id="buttonCheckout" class="btn btn-custom px-2 mt-4">Pay with Stripe</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <a class="btn btn-sm btn-primary p-1" href="/jobs">Go Back</a>
    </div>
</div>

