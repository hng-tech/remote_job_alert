</head>


{{> header }}


<div id="jobPage-wrapper" class=" pb-5">
    {{!-- Breadcrumb --}}
    <div class="container-fluid" style="margin-bottom: 50px;">
        <div class="row mb-4" aria-label="breadcrumb" style="background-color: #11144c; color:#fff;">
            <span class="container pl-4" style="background-cspanor: none; padding: 10px 0;">
                <a href="/">Home</a>
                <span>/ All Listings</span>
            </span>
        </div>
    </div>
    <div class="container">
        
        {{!-- Main Page --}}
        <div class="bg-whyt py-lg-4 py-3 px-lg-3 px-2 shadow-sm  mt-1 mb-5 rounded">
            <h3 class="text-center b-7 mb-md-5 mb-3 pt-3">Remote Developer Jobs</h3>
            <div class="row">
                <div class="col-lg-3">
                    <div class="card br-0 rounded">
                        <div class="card-header b-6 -center">
                            Filter by Category
                        </div>
                        <form>
                            {{!-- <div class="radiobtn">
                                <input type="radio" id="part-time" name="drone" value="part-time"  />
                                <label for="part-time">Part Time</label>
                            </div> --}}
                            <div class="radiobtn">
                                <input type="radio" id="full-time" name="drone" value="full-time" checked />
                                <label for="full-time">Full Time</label>
                            </div>
                            <div class="radiobtn">
                                <input type="radio" id="contract" name="drone" value="contract" />
                                <label for="contract">Contract</label>
                            </div>
                        </form>
                    </div>
                    <br>
                    <div class="card br-0 rounded">
                        <div class="card-header b-6 -center">
                            Technologies
                        </div>
                        <ul class="checkboxes">
                            <li><input id="checkall" type="checkbox" data-id="all"
                                    class="checkbox checkbox--blue-grey" />All stacks
                            </li>
                            <li><input type="checkbox" data-id="android" class="checkbox checkbox--blue-grey" />Android
                            </li>
                            <li><input type="checkbox" data-id="asp" class="checkbox checkbox--blue-grey" />ASP</li>
                            <li><input type="checkbox" data-id="cplusplus" class="checkbox checkbox--blue-grey" />C++
                            </li>
                            <li><input type="checkbox" data-id="devops" class="checkbox checkbox--blue-grey" />DevOps
                            </li>
                            <li><input type="checkbox" data-id="ios" class="checkbox checkbox--blue-grey" />IOS</li>
                            <li><input type="checkbox" data-id="java" class="checkbox checkbox--blue-grey" />Java</li>
                            <li><input type="checkbox" data-id="javascript"
                                    class="checkbox checkbox--blue-grey" />Javascript</li>
                            <li><input type="checkbox" data-id="linux" class="checkbox checkbox--blue-grey" />Linux</li>
                            <li><input type="checkbox" data-id="node" class="checkbox checkbox--blue-grey" />NodeJS</li>
                            <li><input type="checkbox" data-id="php" class="checkbox checkbox--blue-grey" />PHP</li>
                            <li><input type="checkbox" data-id="python" class="checkbox checkbox--blue-grey" />Python
                            </li>
                            <li><input type="checkbox" data-id="react" class="checkbox checkbox--blue-grey" />ReactJS
                            </li>
                            <li><input type="checkbox" data-id="ruby" class="checkbox checkbox--blue-grey" />Ruby</li>
                            <li><input type="checkbox" data-id="sql" class="checkbox checkbox--blue-grey" />SQL</li>

                        </ul>
                    </div>
                    <br>
                    <button id="refine" class="btn btn-primary btn-md btn-rounded mt-2"
                        style="background: #11144c; border: 0; color: #fff">Refine results</button>
                    <button style="background: #11144c; border: 0; color: #fff" id="clear-filter"
                        class="btn btn-primary btn-md btn-rounded mt-2">
                        Clear filters
                    </button>
                </div>
                <div class="col-lg-9 mt-lg-0 mt-3" id="jobTable">
                    {{# each content}}
                    <div class="job_list_wrapper mb-4 border contentCard rounded">
                        <div class="row each-job">
                            <div class="col-md-2">
                                <img class="img-fluid" src="{{this.company_logo}}" alt="{{this.company}} logo">
                            </div>
                            <div class="col-md-7">
                                <a href="jobs/{{ this.custom_url }}">
                                    <h4 class="b-6 mt-3 mt-lg-0 ci-title">{{this.title}}</h4>
                                </a>
                                <p class="text-muted pb-0 mb-1"><i class="fa fa-briefcase mr-1"></i>{{this.type}}</p>
                                <p class="text-muted"><i class="fa fa-building mr-1"></i>{{this.company}}</p>
                            </div>
                            <div class="col-md-3">
                                {{!-- <h6 class="b-7">Pay Range</h6>
                                    <p class="text-muted"></p> --}}
                                <a href="/jobs/{{ this.custom_url }}" class="btn br-0 unsub_cancel btn-sm view-btn rounded">View
                                    details</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <div class="alert alert-info hide" id="infoAlert">
                        <strong>Sorry!!!,</strong> no job found
                    </div>

                    <div class="job__paginate">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                {{#if buttons.previous}}
                                <li class="page-item">
                                    <a class="page-link" href="jobs?page={{buttons.previous}}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {{/if}}
                                {{{helpers.populate_links}}}
                                {{#if buttons.next}}
                                <a class="page-link" href="jobs?page={{buttons.next}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                                </li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{{> footer}}

<script>
    $(function () {

        $("#checkall").change(function () {
            
            $('input[type="checkbox"]').prop('checked', $(this).prop("checked"));
        })

        $('#refine').click(function () {
            var selected_category;
            var selected_stacks = [];

            let categories = $('input[type="radio"]')

            for (let i = 0; i < categories.length; i++) {
                if (categories[i].checked) {
                    selected_category = categories[i].value;
                }
            }

            let stacks = $('input[type="checkbox"]')

            for (let i = 0; i < stacks.length; i++) {
                if (stacks[i].checked) {
                    selected_stacks.push(stacks[i].dataset.id)
                }
            }
            if (selected_stacks[0] == "all")
                selected_stacks.shift()

            let redirect_url = `/jobs/${selected_category}?tech=${(selected_stacks.join('|'))}`

            location.href = redirect_url;

        });

        $('#clear-filter').click(() => location.href = "/jobs");

        $('#infoAlert').hide();
        $('#searchInput').keyup(function () {
            $('.contentCard').hide();
            $('#infoAlert').css("display", "none");
            var txt = $('#searchInput').val();
            var resultCount = 0;
            $('.contentCard').each(function () {
                if ($(this).text().toUpperCase().indexOf(txt.toUpperCase()) != -1) {
                    $(this).show();
                    resultCount++;
                }
            });

            if (resultCount == 0) {
                $('#infoAlert').css("display", "block");
            }

        });
    });
</script>