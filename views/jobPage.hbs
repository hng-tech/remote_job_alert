<!DOCTYPE html>
<html>

<head>

  <title>DevAlert | Remote Job Postings</title>
  <link rel='stylesheet' href='stylesheets/style.css' />
  <link rel="shortcut icon" href="/images/code2.png" type="image/x-icon">
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-139612600-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-139612600-1');
  </script>


</head>


{{> header }}

<div id="jobPage-wrapper" class=" pb-5">
  <div class="container">
    {{!-- Bread crumb --}}
    <div class="row">
      <div class="col-12">
        <div class=" my-4 shadow-sm">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-whyt br-0">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">All Jobs</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>

    {{!-- Main Page --}}
    <div class="bg-whyt py-lg-4 py-3 px-lg-3 px-2 shadow-sm  mt-1 mb-5">
      <h3 class="text-center b-7 mb-md-5 mb-3 pt-3">Remote Developer Jobs</h3>
      <div class="row">
        <div class="col-lg-3">
          <div class="kilo__one">
            <div class="form-group">
              <select name="" id="" class="form-control br-0">
                <option value="" selected>Choose a country</option>
                <option value="canada">Canada</option>
                <option value="germany">Germany</option>
                <option value="india">India</option>
                <option value="nigeria">Nigeria</option>
                <option value="uk">UK</option>
                <option value="us">US</option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="kilo__two">
            <div class="input-group mb-4">
              <input id="searchInput" type="search" class="form-control br-0"
                placeholder="Search with Keyword, Location, company">
              <div class="input-group-prepend">
                <div class="input-group-text bg-deep" id="searchButton"><i class="fa fa-search text-white"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <div class="card br-0">
            <div class="card-header b-6 -center">
              Job Categories
            </div>
            <ul class="list-group list-group-flush">

              <a href="" class="list-group-item job__active">All Jobs </a>
              <a href="/jobs/full-time" id="fullTime" class="list-group-item">Full Time Jobs</a>
              <a href="/jobs/part-time" id="partTime" class="list-group-item">Part Time Jobs</a>
              <a href="/jobs/contract" id="contract" class="list-group-item">Contract Jobs</a>

            </ul>
          </div>

          <br>

          <div class="card br-0">
            <div class="card-header b-6 -center">
              Developer Stack
            </div>
            <ul class="list-group list-group-flush">

              <a href="" class="list-group-item job__active">All language </a>
              <a href="/jobs/javascript" id="javascript" class="list-group-item">Javascript</a>
              <a href="/jobs/c#" id="c#" class="list-group-item">C#</a>
              <a href="/jobs/python" id="python" class="list-group-item">Python</a>
              <a href="/jobs/php" id="php" class="list-group-item">PHP</a>
              <a href="/jobs/java" id="java" class="list-group-item">Java</a>
              <a href="/jobs/node" id="node" class="list-group-item">Node</a>
              <a href="/jobs/c" id="c" class="list-group-item">C</a>
              <a href="/jobs/c++" id="c++" class="list-group-item">C++</a>
              <a href="/jobs/asp" id="asp" class="list-group-item">ASP.Net</a>
              <a href="/jobs/react" id="react" class="list-group-item">React</a>
              <a href="/jobs/android" id="android" class="list-group-item">Android</a>
              <a href="/jobs/linux" id="linux" class="list-group-item">Linux</a>


            </ul>
          </div>

        </div>
        <div class="col-lg-9 mt-lg-0 mt-3" id="jobTable">
          {{# each content}}
          <div class="job_list_wrapper mb-4 border contentCard">
            <div class="row ">
              <div class="col-md-3">
                <img class="img-fluid" src="{{this.company_logo}}" alt="{{this.company}} logo">
              </div>
              <div class="col-md-6">
                <a href="jobs/{{ this.custom_url }}">
                  <h4 class="b-6 mt-3 mt-lg-0 ci-title">{{this.title}}</h4>
                </a>
                <p class="text-muted pb-0 mb-1"><i class="fa fa-briefcase mr-1"></i>{{this.type}}</p>
                <p class="text-muted"><i class="fa fa-building mr-1"></i>{{this.company}}</p>
              </div>
              <div class="col-md-3">
                {{!-- <h6 class="b-7">Pay Range</h6>
                                    <p class="text-muted"></p> --}}
                <a href="jobs/{{ this.custom_url }}" class="btn br-0 unsub_cancel btn-sm">View details</a>
              </div>
            </div>
          </div>
          {{/each}}
          <div class="alert alert-info hide" id="infoAlert">
            <strong>Sorry!!!,</strong> no job found
          </div>

          <div class="job__paginate my-4">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                {{#if buttons.previous}}
                <li class="page-item">
                  <a class="page-link" href="jobs?page={{buttons.previous}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                {{/if}}
                {{{helpers.populate_links}}}
                {{#if buttons.next}}
                <a class="page-link" href="jobs?page={{buttons.next}}" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
                </li>
                {{/if}}
              </ul>
            </nav>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

{{> footer}}

<script>
  $(document).ready(function () {

    $('#infoAlert').hide();
    $('#searchInput').keyup(function () {
      $('.contentCard').hide();
      $('#infoAlert').css("display", "none");
      var txt = $('#searchInput').val();
      var resultCount = 0;
      $('.contentCard').each(function () {
        if ($(this).text().toUpperCase().indexOf(txt.toUpperCase()) != -1) {
          $(this).show();
          resultCount++;
        }
      });

      if (resultCount == 0) {
        $('#infoAlert').css("display", "block");
      }

    });

  });
</script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
